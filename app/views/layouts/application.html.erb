<!DOCTYPE html>
<html>
  <head>
    <title>ThreeOneOneTracker</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

    <script src='https://api.mapbox.com/mapbox-gl-js/v1.12.0/mapbox-gl.js'></script>
    <link href='https://api.mapbox.com/mapbox-gl-js/v1.12.0/mapbox-gl.css' rel='stylesheet' />
  </head>

  <body>
    <nav class="navbar navbar-light bg-light">
      <a class="navbar-brand" href="/">ThreeOneOne Tracker</a>
      <form class="form-inline">
        <a class="btn btn-outline-primary" href="/calls">Calls</a>
        <div style="padding-left: 10px;">
          <a class="btn btn-outline-success" href="/neighbourhoods">Neighbourhoods</a>
        </div>
        <div style="padding-left: 10px;">
          <a class="btn btn-outline-success" href="/wards">Wards</a>
        </div>
        <div style="padding-left: 10px;">
          <a class="btn btn-outline-success" href="/service_areas">Service Areas</a>
        </div>
         <div style="padding-left: 10px;">
          <a class="btn btn-outline-success" href="/service_requests">Service Requests</a>
        </div>
      </form>
      <%= form_tag "/search", class: "form-inline ml-auto", method: "GET" do %>
        <div class="md-form my-0">
           <%= search_field_tag :search, params[:search], placeholder: "Search", class: "form-control" %>
        </div>
        <select name="category" class="mdb-select">
          <option value="neighbourhood" class="rounded-circle">
            Neighbourhoods
          </option>
          <option value="ward" class="rounded-circle">
            Wards
          </option>
          <option value="service_area" class="rounded-circle">
            Service Areas
          </option>
          <option value="service_request" class="rounded-circle" selected>
            Service Requests
          </option>
        </select>
        <button class="btn btn-outline-white btn-md my-0 ml-sm-2" type="submit">Search</button>
      <% end %>
    </nav>

    <%= yield %>
  </body>
</html>
